[user]
	name = alexandre lababsa
[alias]
    # Basic shortcuts
    st = status
    ci = commit
    co = checkout
    br = branch
    df = diff
    
    # Advanced shortcuts
    lg = log --oneline --graph --decorate --all
    ll = log --pretty=format:'%C(yellow)%h%C(red)%d %C(reset)%s%C(blue) [%cn]' --decorate --numstat
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    
    # Useful commands
    unstage = reset HEAD --
    last = log -1 HEAD
    visual = !gitk
    
    # Branch operations
    delete-merged = "!git branch --merged | grep -v '\\*\\|master\\|main\\|develop' | xargs -n 1 git branch -d"
    
    # Show files ignored by git
    ignored = ls-files -o -i --exclude-standard
    
    # Amend commit
    amend = commit --amend --no-edit
    
    # Interactive rebase
    rb = rebase -i
    
[core]
    excludesfile = ~/.gitignore_global
    editor = nvim
    pager = delta
    
[interactive]
    diffFilter = delta --color-only
    
[delta]
    navigate = true
    light = false
    line-numbers = true
    syntax-theme = Catppuccin-mocha
    
[merge]
    conflictstyle = diff3
    
[diff]
    colorMoved = default
    
[init]
    defaultBranch = main
    
[push]
    default = simple
    autoSetupRemote = true
    
[pull]
    rebase = true
    
[fetch]
    prune = true
    
[rebase]
    autoStash = true
    
[rerere]
    enabled = true
    
[color]
    ui = auto
    
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
    
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red
    new = green
    
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
